rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per la collezione feedback - solo scrittura per raccogliere feedback
    match /feedback/{document} {
      allow create: if true; // Permette creazione feedback da chiunque
      allow read, update, delete: if false; // Solo admin possono leggere/modificare
    }
    
    // Regole per altre collezioni - solo utenti autenticati
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}