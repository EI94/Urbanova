rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per la collezione feedback
    match /feedback/{document} {
      allow read, write: if true; // Permette lettura e scrittura a tutti per ora
    }
    
    // Regole esistenti per altre collezioni
    match /{document=**} {
      allow read, write: if true; // Regola temporanea per sviluppo
    }
  }
}