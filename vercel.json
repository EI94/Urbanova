{
  "framework": "nextjs",
  "buildCommand": "pnpm -r --filter '@urbanova/types' build && pnpm -r --filter '@urbanova/infra' build && pnpm -r --filter '@urbanova/toolos' build && pnpm -r --filter '@urbanova/data' build && pnpm -r --filter '@urbanova/os' build && pnpm run build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "outputDirectory": ".next",
  "functions": {
    "runtime": "nodejs20.x",
    "app/api/**/route.js": { 
      "memory": 1024, 
      "maxDuration": 30 
    }
  },
  "crons": [
    { 
      "path": "/api/cron/watchlists-runner", 
      "schedule": "0 8 * * *" 
    },
    { 
      "path": "/api/cron/usage-aggregate", 
      "schedule": "5 0 * * *" 
    }
  ],
  "headers": [
    { 
      "source": "/(.*)", 
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
